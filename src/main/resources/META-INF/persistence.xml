<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">
	<persistence-unit name="progtechStorage">
		<class>storage.model.User</class>
		<class>storage.model.Product</class>
		<class>storage.model.OrderItem</class>
		<class>storage.model.MyOrder</class>
		<class>storage.model.Customer</class>
		
		<properties>
			
			<property name="javax.persistence.jdbc.driver" value="org.hsqldb.jdbcDriver" />
			<property name="javax.persistence.jdbc.url" value="jdbc:hsqldb:mem:standalone;sql.syntax_mys=true" />
			<property name="javax.persistence.jdbc.user" value="sa" />
			<property name="javax.persistence.jdbc.password" value="" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect" />
			<property name="hibernate.hbm2ddl.auto" value="create" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="false" />
			<property name="hibernate.c3p0.min_size" value="1" />
			<property name="hibernate.c3p0.max_size" value="3" />
			<property name="hibernate.c3p0.timeout" value="10" />
			<property name="hibernate.c3p0.max_statements" value="50" />
		</properties>
	</persistence-unit>
</persistence>